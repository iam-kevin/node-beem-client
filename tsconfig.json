{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["ES2021.Promise", "ES2021.String"],
		"module": "commonjs",
		"declaration": true,
		"outDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "__tests__"]
}
